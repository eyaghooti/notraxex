      nav.classList.add("bg-dark", "navbar-dark");
      document.querySelectorAll(".card").forEach(c => c.classList.add("dark-mode"));
      toggle.innerText = "â˜€ï¸ Ø­Ø§Ù„Øª Ø±ÙˆØ´Ù†";
    } else {
